const express = require('express');
const fs = require('fs');
const path = require('path');

const router = express.Router();

router.get('/', (req, res) => {
  const number = req.query.number;
  const qrFilePath = path.join(__dirname, '../../sessions', `${number}.json`);

  if (!number) {
    return res.status(400).json({ error: 'Missing number' });
  }

  // Check if session file exists
  if (!fs.existsSync(qrFilePath)) {
    return res.status(404).json({ error: 'QR not generated yet or session missing' });
  }

  // Load the QR (assumes QR was returned in session generation)
  try {
    const sessionData = fs.readFileSync(qrFilePath);
    const parsed = JSON.parse(sessionData);

    if (parsed && parsed.qr) {
      res.json({ qr: parsed.qr });
    } else {
      res.status(404).json({ error: 'QR code not available in session file' });
    }
  } catch (err) {
    res.status(500).json({ error: 'Error reading session file' });
  }
});

module.exports = router;
